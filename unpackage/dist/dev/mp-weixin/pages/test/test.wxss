.root {
  width: 100%;
}
.play-list-wrap {
  margin-bottom: 300rpx;
}
.imgbox {
  width: 80rpx;
  height: 80rpx;
}
.list {
  width: 100%;
}
.list .item {
  width: 96%;
  padding: 25rpx 3%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  border-bottom: 2rpx solid #f0edf1;
}
.list .item .all {
  font-size: 28rpx;
}
.list .item .all text {
  display: inline-block;
  margin-left: 15rpx;
  font-size: 32rpx;
  padding-top: 5rpx;
}
.list .item .delete {
  background: #f53131;
  border-radius: 8rpx;
  padding: 5rpx 15rpx;
  color: #ffffff;
  font-size: 26rpx;
}
.list .item .story {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 80%;
}
.list .item .story checkbox {
  margin-top: 15rpx;
}
.list .item .story .story-info {
  margin-left: 15rpx;
}
.list .item .story .story-info .title {
  font-size: 28rpx;
  font-weight: 600;
}
.list .item .story .story-info .album {
  font-size: 24rpx;
  margin-top: 5rpx;
}
.list .item .controller {
  margin-top: 25rpx;
}
.list .item .controller image {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.audio-controller {
  position: fixed;
  z-index: 999;
  width: 100%;
  background: #ffffff;
  bottom: 0rpx;
}
.audio-controller .top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.audio-controller .top .title {
  width: 57%;
  margin-left: 3%;
  font-size: 30rpx;
}
.audio-controller .top .controller-icon {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  width: 40%;
}
.audio-controller .top .controller-icon image {
  display: inline-block;
  height: 30rpx;
  width: 30rpx;
}
.audio-controller .bottom {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.audio-controller .bottom .time {
  margin-top: 26rpx;
  margin-right: 20rpx;
  color: #808080;
  font-size: 28rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-weight: 600;
}
.audio-controller .bottom .time image {
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin-left: 30rpx;
  margin-top: 5rpx;
}

